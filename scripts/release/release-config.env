# PromptImprover release pipeline configuration.
PROJECT_FILE="PromptImprover.xcodeproj"
SCHEME_NAME="PromptImprover"
CONFIGURATION="Release"
APP_NAME="PromptImprover"

# Release invariants.
EXPECTED_BUNDLE_IDENTIFIER="com.jnjambrin0.PromptImprover"
SPARKLE_FEED_URL="https://jnjambrin0.github.io/PromptImprover/updates/stable/appcast.xml"

# Update hosting output.
UPDATES_DIR="./updates/stable"
GITHUB_REPOSITORY="jnjambrin0/PromptImprover"
GITHUB_PAGES_BRANCH="gh-pages"
GITHUB_PAGES_PATH="updates/stable"

# Sparkle tooling location.
# Example:
# SPARKLE_BIN="$HOME/Library/Developer/Xcode/DerivedData/.../SourcePackages/artifacts/sparkle/Sparkle/bin"
# Leave empty to auto-resolve from:
# 1) ./build/local/DerivedData/SourcePackages/artifacts/sparkle/Sparkle/bin
# 2) first match in ~/Library/Developer/Xcode/DerivedData
SPARKLE_BIN=""

# Signing/notarization.
DEVELOPER_ID_APPLICATION=""
NOTARY_PROFILE=""

# Optional explicit xcodebuild path.
XCODEBUILD_BIN="/Applications/Xcode.app/Contents/Developer/usr/bin/xcodebuild"

# Local release pipeline overrides (used by release-local.sh).
LOCAL_DERIVED_DATA="./build/local/DerivedData"
LOCAL_STAGE_ROOT="./build/local/dmg-root-release-local"
LOCAL_MACOSX_DEPLOYMENT_TARGET="15.0"
LOCAL_DISABLE_CODE_SIGNING="1"
LOCAL_ADHOC_SIGN_APP="1"
